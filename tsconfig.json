{
  "include": ["src/**/*"],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "es2019",
    "module": "ES2020",
    "skipLibCheck": true,
    "incremental": true,
    "tsBuildInfoFile": "lib/tsconfig.tsbuildinfo"
  }
}
